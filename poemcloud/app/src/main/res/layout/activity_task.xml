<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.TaskActivity"
    android:layout_width="match_parent"
    android:background="@drawable/lightback"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/task1"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/choicedark"
        android:scaleType="center"
        android:text="     关卡一 · 填诗句"
        android:textSize="30dp"
        ></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"></TextView>

    <Button
        android:id="@+id/task2"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/choicedark"
        android:text="      关卡二 · 悟诗意"
        android:textSize="30dp"
        ></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"></TextView>

    <Button
        android:id="@+id/task3"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        android:background="@drawable/choicedark"
        android:text="      关卡三 · 飞花令"
        android:textSize="30dp"></Button>

</LinearLayout>